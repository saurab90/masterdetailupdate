@model EditMasterDetails.OrderMaster
@{
    ViewBag.Title = "Create";
}

<h2>Create Master Detail </h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="panel-title">Order Master</div>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.Table_ID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Table_ID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Table_ID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="clearfix">&nbsp;</div>
               
                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="clearfix">&nbsp;</div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Order_DATE, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Order_DATE, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Order_DATE, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="clearfix">&nbsp;</div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Waiter_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Waiter_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Waiter_Name, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="panel-title">Order Details</div>
            </div>
            <div class="panel-body">
                @*@Html.TextBox("IndexId", null, new { @class = "form-control" })*@
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("OrdItemName", "Item Name", new { @class = "control-label col-md-4" })
                            <div class="col-md-6">
                                @Html.TextBox("OrdItemName", null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Table_ID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                        <div class="clearfix">&nbsp;</div>
                        <div class="form-group">
                            @Html.Label("OrdNotes", "Ord Notes", new { @class = "control-label col-md-4" })
                            <div class="col-md-6">
                                @Html.TextBox("OrdNotes", null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Table_ID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.Label("OrdQTY", "Ord QTY", new { @class = "control-label col-md-4" })
                            <div class="col-md-6">
                                @Html.TextBox("OrdQTY", null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Table_ID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                        <div class="clearfix">&nbsp;</div>
                        <div class="form-group">
                            @Html.Label("OrdPrice", "Ord Price", new { @class = "control-label col-md-4" })
                            <div class="col-md-6">
                                @Html.TextBox("OrdPrice", null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Table_ID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix">&nbsp;</div>
               
                <div class="col-md-4 col-md-offset-8">
                    <input id="AddBtn" type="button" value="Add" class="btn btn-info" />
                    <input id="UpdateBtn" type="button" value="Update" class="btn btn-info" />
                </div>

            </div>
        </div>
    </div>

    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="panel-title">Added Order Details Items</div>
            </div>
            <div class="panel-body">
                <table id="table" class="table table-bordered table-hover table-striped table-responsive">
                    <thead>
                        <tr style="background-color:teal;color:white;font-weight:bold">
                            <td>Sl No.</td>
                            <td>Item Nmae</td>
                            <td>Note</td>
                            <td>Qty</td>
                            <td>Price</td>
                            <td>Total Price</td>
                            <td colspan="2" style="text-align:center">Update/Remove</td>
                        </tr>
                    </thead>
                    <tbody id="OrdDetailTable"></tbody>
                </table>
            </div>
        </div>
    </div>


    <div class="col-md-4 col-md-offset-5">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
    <div class="clearfix">&nbsp;</div>

    @section scripts{
        <script src="~/Scripts/OrderCreate/Oeder.js"></script>
    }
}

